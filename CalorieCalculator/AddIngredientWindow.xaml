<Window x:Class="CalorieCalculator.AddIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Ingredient" Height="230" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Ingredient:" />
        <TextBox x:Name="IngredientTextBox" Grid.Row="1" />

        <Label Content="Weight (g):" Grid.Row="2" />
        <TextBox x:Name="WeightTextBox" Grid.Row="3" />

        <Label Content="Calories (per 100g):" Grid.Row="4" />
        <TextBox x:Name="CaloriesTextBox" Grid.Row="5" Margin="0,24,0,-16" />

        <Button Content="Add" Grid.Row="4" HorizontalAlignment="Right" Margin="0,58,0,-59" Click="Add_Click" Width="41" />
        <Button Content="Cancel" Grid.Row="4" HorizontalAlignment="Right" Margin="0,59,54,-59" Click="Cancel_Click" />

    </Grid>
</Window>


